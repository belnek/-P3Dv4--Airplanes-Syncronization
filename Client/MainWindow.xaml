<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="Client" Height="350" Width="525" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="29" Margin="215,10,0,0" TextWrapping="Wrap" Text="Имя юзера" VerticalAlignment="Top" Width="292"/>
        <Button x:Name="bConnDicon" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="199" Height="29"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="146" Margin="10,79,0,0" VerticalAlignment="Top" Width="497"/>
        <Button x:Name="bCheckConn" Click="bCheckConn_Click" Content="Проверка соединения с симулятором" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" Width="199" Height="30" RenderTransformOrigin="0.548,1.596"/>

    </Grid>
</Window>
